/* pages/aboutus/aboutus.wxss */
.view-top{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:30rpx;
  border-bottom: solid 2rpx #f1f1f1;
  background-color: #34c083;
}
.view-top .logo{
  border: solid 4rpx #fff;
  border-radius: 50%;
  margin-bottom: 16rpx;
}
.view-top text{
  font-size:32rpx;
  color:#fff;
}
.view-top .tel{
  margin-top: 16rpx;
  display: flex;
  align-items: center;
}
.photo-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding:10rpx;
}
.photo-list .photo-item{
  display: inline-block;
  width: calc(100%/3);
  font-size: 12px;
  position: relative;
  vertical-align: middle;
  overflow: hidden;
  border:solid 5rpx #fff;
  box-sizing: border-box;
 
}
.photo-list .photo-item:before {
    content:"";
    display: inline-block;
    padding-bottom: 100%;
    width: 0px;
    vertical-align: middle;
    box-sizing: border-box;
}
.photo-list .photo-item image{
  position: absolute;
  top:0;left:0;
  width:100%;
  height: 100%;
}
.about-content{
  padding:30rpx;
}