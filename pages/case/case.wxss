.list-masonry{
  padding:110rpx 20rpx 40rpx 20rpx;
  column-count: 2;
  column-gap: 20rpx;
}
.item-masonry{
  background-color: #fff;break-inside: avoid; box-sizing: border-box;margin-bottom: 20rpx;border-radius: 10rpx;padding-bottom: 20rpx;
}
.item-masonry image {
  width: 100%;border-radius: 10rpx 10rpx 0 0 ;
}
.item-masonry text{
  display: block;
  padding:12rpx 18rpx 0 18rpx;
  font-size:22rpx;
}
.case-info{
  display: flex;
  justify-content: space-between;
  padding:12rpx 18rpx 0 18rpx;
   align-items: center;
}
.view-count,.star-count{
  display: flex;
  align-items: center;
}
.item-masonry .view-count-text,.item-masonry .star-count-text{
  margin:0 0 0 16rpx;padding:0;
}


.toolbar-header {
  position: fixed;
  z-index: 9;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 88rpx;
  
  border-width: 1px 0px 1px 0px;
  border-color: #e6e6e6;
  border-style: solid;
  background: #fff;
  box-sizing: border-box;
}
.toolbar-header .style-tab, .toolbar-header .huxing-tab, .toolbar-header .class-tab {
  font-size: 28rpx;
  display: flex;
  flex: 1;
  position: relative;
  text-align: center;
  align-items: center;
  justify-content: center;
  padding:0 30rpx;
  box-sizing: border-box;
  white-space: nowrap;
  overflow-x: hidden;
  text-overflow:'';
  
}
.toolbar-header .action{
  color:#009966;
}
.toolbar-header .style-tab, .toolbar-header .huxing-tab {
  border-right: 1px solid #e6e6e6;
}

.toolbar-header .style-tab::after, .toolbar-header .huxing-tab::after,.toolbar-header .class-tab::after {
  content: " "; 
  width: 12rpx;
  height: 12rpx;
  margin-left:12rpx;
  margin-top: -12rpx;
  border-width: 1px 1px 0px 0px;
  transform: matrix(0.71, 0.71, 0.71, -0.71, 0, 0);
  border-style: solid;
  border-color: #9e9e9e;
}
.toolbar-header .action::after {
  content: " ";
  width: 12rpx;
  height: 12rpx;
  margin-left:12rpx;
  margin-top: -12rpx;
  border-width: 1px 1px 0px 0px;
  transform: matrix(0.71, -0.71, 0.71, 0.71, 0, 5);
  border-style: solid;
  border-color: #009966;
}
.category-list {
  min-height: 100%;
  width: 100%;
  display: flex;
  position: fixed;
  margin-top: 89rpx;
  z-index: 1;
  flex-direction: column;
}

.category-list .category-cover {
  background: #ccc;
  flex-grow: 1;
  opacity: 0.3;
  width: 100%;
  height: 9999rpx;
}

.category-list-item {
  display: flex;
  flex-direction: row;
  padding: 20rpx 20rpx 20rpx 20rpx;
  flex-wrap: wrap;
  background: #fff;
}
.category-list-show{
  display: flex;
  animation: slide 300ms;
}
@keyframes slide {
  0% {
    top: -500rpx;
  }

  100% {
    top: 0rpx;
  }
}
.category-list-hide{
  display: none;
}

.category-list-item .category {
  border: 1px solid #ccc;
  background: #fff;
  color: #4a4a4a;
  border-radius: 10rpx;
  font-weight: 500;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx 26rpx 8rpx 26rpx;
  margin: 10rpx 30rpx 10rpx 0rpx;
  box-sizing: border-box;
}
.category-list-item .action{
  border: 1px solid #009966;
  color:#009966;
}