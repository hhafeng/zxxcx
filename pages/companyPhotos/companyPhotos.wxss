/* pages/companyPhotos/companyPhotos.wxss */
.photo-list{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding:10rpx;
}
.photo-list .photo-item{
  display: inline-block;
  width: calc(100%/3);
  font-size: 12px;
  position: relative;
  vertical-align: middle;
  overflow: hidden;
  border:solid 5rpx #fff;
  box-sizing: border-box;
 
}
.photo-list .photo-item:before {
    content:"";
    display: inline-block;
    padding-bottom: 100%;
    width: 0px;
    vertical-align: middle;
    box-sizing: border-box;
}
.photo-list .photo-item image{
  position: absolute;
  top:0;left:0;
  width:100%;
  height: 100%;
}