/**index.wxss**/
swiper-item image{
  width:100%;
  height:100%;
}
.nav{
  display: flex;
  padding:50rpx 20rpx 30rpx 20rpx;
  flex-wrap: wrap;
}
.nav-item{
  width:20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.nav-item image{
  width:90rpx;
  height:90rpx;
}
.nav-item text{
  margin:10rpx 0 30rpx 0;
}
.index-ad{
  display: flex;
  padding-bottom: 30rpx;
}
.index-ad-1{
  flex:1;
  width:50%;height:320rpx;background-color: #eee;
  margin-right: 20rpx;
}
.index-ad-1 image{
  width:100%;height: 320rpx;
}
.index-right-ad{
  display: flex;
  flex:1;
  flex-direction: column;
}
.index-ad-2{
  width:100%;height:150rpx;background-color: #eee;
  margin-bottom: 20rpx;
}
.index-ad-2 image{
  width:100%;height: 150rpx;
}
.index-ad-3{
  width:100%;height:150rpx;background-color: #eee;
}
.index-ad-3 image{
  width:100%;height: 150rpx;
}
.index-case-list{
  padding-bottom: 20rpx;
}
.index-case-item{
 padding:0 30rpx;
}
.index-case-item image{
  width:100%;height: 400rpx;
}
.index-case-text{
  display: flex;
  height:60rpx;
  align-items: center;
  margin-bottom:30rpx;
  color:#999;
}
.index-case-text text{
  flex:1;
  overflow-x:hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}