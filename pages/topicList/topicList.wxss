/* pages/topicList/topicList.wxss */
page{
  background-color: #f1f1f1;
}
.topicList-Page{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.topicitem{
  width:92%;
  background-color: #fff;
  border-radius: 16rpx;
  margin:30rpx 0 0 0;
  padding:0 0 20rpx 0;
}
.topicitem image{
  border-radius: 16rpx 16rpx 0 0;
}
.topicitem .topic-title{
  padding:16rpx 30rpx 0 30rpx;
}
.topicitem .topic-data text{
  font-size:28rpx;color:#999;
}
.topicitem .topic-data{
  padding:16rpx 30rpx 0 30rpx;
}