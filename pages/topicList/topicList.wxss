/* pages/topicList/topicList.wxss */
page{
  background-color: #f1f1f1;
}
.topicList-Page{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0 0 0;
}
.topicitem{
  width:92%;
  background-color: #fff;
  border-radius: 16rpx;
  margin:0 0 30rpx 0;
  padding:0 0 20rpx 0;
}
.topicitem .topicimg{
  width:100%;height:320rpx;overflow: hidden;
}
.topicitem image{
  border-radius: 16rpx 16rpx 0 0;
  width: 100%;
}
.topicitem .topic-title{
  padding:16rpx 30rpx 0 30rpx;
}
.topicitem .topic-title text{
  font-size:32rpx;
}
.topicitem .topic-data text{
  font-size:28rpx;color:#999;
}
.topicitem .topic-data{
  padding:16rpx 30rpx 0 30rpx;
}
.noMore{
  text-align: center;
  color:#999;
  padding:20rpx;
}