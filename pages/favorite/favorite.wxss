/* pages/favorite/favorite.wxss */
page{
  background-color: #f1f1f1;
}
.list-masonry{
  padding:20rpx 10rpx 40rpx 10rpx;
  display: flex;
}
.list-masonry-column{
  display: flex;
  flex-direction: column;
  width:50%;
  padding:0 10rpx;
}
.item-masonry{
  background-color: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding-bottom: 20rpx;

}
.item-masonry image {
  width: 100%;border-radius: 10rpx 10rpx 0 0 ;
}
.item-masonry text{
  display: block;
  padding:12rpx 18rpx 0 18rpx;
  font-size:22rpx;
}
.case-info{
  display: flex;
  justify-content: space-between;
  padding:12rpx 18rpx 0 18rpx;
   align-items: center;
}
.view-count,.star-count{
  display: flex;
  align-items: center;
}
.item-masonry .view-count-text,.item-masonry .star-count-text{
  margin:0 0 0 16rpx;padding:0;
}
.noMore{
  text-align: center;
  color:#999;
  padding:20rpx;
}