/* pages/article/article.wxss */
page{
  background-color: #f1f1f1;
}
.article-page{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding:20rpx 0 0 0;
}
.article-item{
  width:92%;
  display: flex;
  background-color: #fff;
  padding:24rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  position: relative;
}
.article-item .article-img{
  width:180rpx;height: 180rpx;overflow: hidden;
}
.article-item .article-img image{
  width:100%;
}
.article-item .article-art{
  flex:1;margin-left:30rpx;
}
.article-item .article-art .article-desc{
  color:#999;
}
.article-item .article-art .article-title text{
  font-size:32rpx;
}
.article-item .article-art .article-data{
  margin-top:16rpx;
}
.article-item .article-art .article-data text{
  color:#999;
}
.noMore{
  text-align: center;
  color:#999;
  padding:20rpx;
}